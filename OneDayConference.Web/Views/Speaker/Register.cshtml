@model OneDayConference.Web.Models.Speaker

@{
    ViewBag.Title = "Register to be a Speaker";
}

@using(Html.BeginForm())
{
    <fieldset>
        <p>
            @Html.LabelFor(x=> x.Name)
            @Html.TextBoxFor(x=> x.Name)
        </p>
        <p>
            @Html.LabelFor(x=> x.IsAttending)
            @Html.CheckBoxFor(x=> x.IsAttending)
        </p>
        <p>
            <input type="submit" value="Create Session"/>
        </p>
    </fieldset>
}
